    <TargetFrameworks>net7.0</TargetFrameworks>
    <AssemblyTitle>Neo.CommandLine</AssemblyTitle>
    <AssemblyName>neo-cmd</AssemblyName>
    <Nullable>enable</Nullable>
    <AllowUnsafeBlocks>true</AllowUnsafeBlocks>
